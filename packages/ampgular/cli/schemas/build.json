{
  "$schema": "http://json-schema.org/schema",
  "title": "Build Config",
  "$id": "amp-cli://schemas/build.json",
  "description": "Build Configuration",
  "type": "object",
  "allOf": [
      {
        "type":"object",
        "properties": {
          "mode": {
            "description": "Create only one AMp Page (route porperty) and spin a loclaserver to easy the devs process",
